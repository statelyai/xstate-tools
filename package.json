{
  "name": "xstate-vscode",
  "description": "XState VSCode (demo)",
  "author": "Matt Pocock",
  "license": "MIT",
  "version": "1.1.2",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mattpocock/vscode-xstate-demo"
  },
  "workspaces": {
    "packages": [
      "client",
      "server",
      "shared"
    ]
  },
  "categories": [],
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "main": "./client/dist/index.js",
  "publisher": "mattpocock",
  "contributes": {},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "fe:build": "esbuild client/src/webviewScript.ts --bundle --outfile=client/scripts/webview.js",
    "compile": "npm run fe:build && esbuild --bundle server/src/server.ts --outfile=server/dist/index.js --external:vscode --platform=\"node\" && esbuild --bundle --platform=\"node\" client/src/extension.ts --outfile=client/dist/index.js --external:vscode",
    "server:watch": "ncc build server/src/server.ts -t -w -o server/dist",
    "client:watch": "ncc build client/src/extension.ts -t -w -o client/dist",
    "watch": "concurrently \"npm:server:watch\" \"npm:client:watch\"",
    "test": "sh ./scripts/e2e.sh",
    "postinstall": "preconstruct dev"
  },
  "devDependencies": {
    "@preconstruct/cli": "^2.1.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "concurrently": "6.2.0",
    "eslint": "^7.26.0",
    "mocha": "^8.3.2",
    "typescript": "^4.3.2",
    "esbuild": "^0.12.22"
  },
  "preconstruct": {
    "packages": [
      "shared"
    ]
  }
}
