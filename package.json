{
  "name": "stately-tools",
  "author": "Stately Team",
  "license": "MIT",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/statelyai/xstate-vscode"
  },
  "bugs": {
    "url": "https://github.com/statelyai/xstate-vscode/issues"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/extension/*",
      "apps/*"
    ]
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": "prettier --write"
  },
  "scripts": {
    "cli": "yarn workspace @xstate/cli",
    "parser": "yarn workspace @xstate/machine-extractor",
    "server": "yarn workspace @xstate/vscode-server",
    "client": "yarn workspace stately-vscode",
    "shared": "yarn workspace @xstate/tools-shared",
    "prepare": "husky install",
    "postinstall": "preconstruct dev && manypkg check",
    "release": "(cd apps/extension/client && npx vsce package) && changeset publish && (cd apps/extension/client && npx vsce publish --packagePath $(find . -iname *.vsix))",
    "deps:build": "preconstruct build",
    "extension:compile": "yarn turbo run build --no-cache && cp apps/extension/server/dist/index.js apps/extension/client/dist/server.js"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "turbo": {
    "globalDependencies": [
      "package.json"
    ],
    "pipeline": {
      "lint": {
        "outputs": []
      },
      "test": {
        "outputs": []
      },
      "viz:build": {
        "outputs": [
          "scripts/vizWebview.js"
        ],
        "cache": false
      },
      "editor:build": {
        "outputs": [
          "scripts/editorWebview.js"
        ],
        "cache": false
      },
      "build": {
        "dependsOn": [
          "viz:build",
          "editor:build",
          "^build"
        ],
        "outputs": [
          "dist/**"
        ],
        "cache": false
      }
    }
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/parser": "^7.12.11",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/traverse": "^7.12.12",
    "@babel/types": "^7.12.12",
    "@changesets/cli": "^2.21.0",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.0",
    "@types/node": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "concurrently": "6.2.0",
    "esbuild": "^0.14.21",
    "eslint": "^7.26.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.3.1",
    "turbo": "^1.1.2",
    "typescript": "^4.3.5"
  }
}
